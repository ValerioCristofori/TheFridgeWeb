<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <display-name>TheFridgeWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  
  <servlet>
  	<servlet-name>loginServlet</servlet-name>
  	<servlet-class>logic.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>registrationServlet</servlet-name>
  	<servlet-class>logic.servlet.RegistrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>registrationServlet</servlet-name>
  	<url-pattern>/registration</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>homeServlet</servlet-name>
  	<servlet-class>logic.servlet.ViewFridgeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>homeServlet</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
 
 
  <servlet>
  	<servlet-name>addFoodServlet</servlet-name>
  	<servlet-class>logic.servlet.AddFoodServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>addFoodServlet</servlet-name>
  	<url-pattern>/addFood</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>changeFridgeServlet</servlet-name>
  	<servlet-class>logic.servlet.ChangeFridgeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>changeFridgeServlet</servlet-name>
  	<url-pattern>/change</url-pattern>
  </servlet-mapping>
  	
  <servlet>
  	<servlet-name>inviteServlet</servlet-name>
  	<servlet-class>logic.servlet.InviteUserServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>inviteServlet</servlet-name>
  	<url-pattern>/invite</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>profileServlet</servlet-name>
  	<servlet-class>logic.servlet.ProfileServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>profileServlet</servlet-name>
  	<url-pattern>/profile</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>chooseRecipesServlet</servlet-name>
  	<servlet-class>logic.servlet.ChooseRecipesServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>chooseRecipesServlet</servlet-name>
  	<url-pattern>/startSearch</url-pattern>
  </servlet-mapping>
  
